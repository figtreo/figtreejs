{
    "compilerOptions": {
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react",
      "module": "node16",
      "declaration": true,
      "declarationDir": "dist/types",
      "declarationMap":true,
      "sourceMap": true,
      "outDir": "dist",
      "moduleResolution": "node16",
      "emitDeclarationOnly": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "downlevelIteration": true,
      "allowJs": true,
      "composite": true,
    },
    "include": ["./src/**/*"],
    "typeRoots": [
      "src/@custom-types",
      "node_modules/@types"
    ],
    "references": [
      { "path": "../core" }
  ]
  }
  