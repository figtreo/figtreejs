{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // override for dts emission:
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "isolatedModules": true
  },
  "include": ["src"]
}